<style>
    #footer {
        background: linear-gradient(135deg, #2a3a7a 0%, #1a2352 100%);
        color: #fff;
        padding: 60px 0 40px;
        width: 100%;
        font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
        position: relative;
        overflow: hidden;
    }

    #footer::before {
        content: '';
        position: absolute;
        top: -50px;
        right: -50px;
        width: 200px;
        height: 200px;
        background: rgba(106, 130, 235, 0.08);
        border-radius: 50%;
        z-index: 0;
    }

    #footer::after {
        content: '';
        position: absolute;
        bottom: -80px;
        left: -80px;
        width: 250px;
        height: 250px;
        background: rgba(106, 130, 235, 0.05);
        border-radius: 50%;
        z-index: 0;
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
        position: relative;
        z-index: 1;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 40px;
        margin-bottom: 50px;
    }

    .footer-column h3 {
        color: #dfe3f0;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        position: relative;
        padding-bottom: 10px;
    }

    .footer-column h3::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 2px;
        background: linear-gradient(90deg, #6a82eb, #dfe3f0);
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .footer-links li a {
        color: #dfe3f0;
        text-decoration: none;
        font-size: 15px;
        font-weight: 400;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .footer-links li a:hover {
        color: #6a82eb;
        transform: translateX(5px);
    }

    .footer-social {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .footer-social a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .footer-social a:hover {
        background: #6a82eb;
        transform: translateY(-3px);
    }

    .footer-social svg {
        width: 18px;
        height: 18px;
        fill: #dfe3f0;
    }

    .footer-bottom {
        border-top: 1px solid rgba(223, 227, 240, 0.1);
        padding-top: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .footer-logo {
        width: 120px;
        height: auto;
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    .footer-logo:hover {
        opacity: 1;
    }

    .footer-copyright {
        text-align: center;
        color: rgba(223, 227, 240, 0.7);
        font-size: 14px;
        line-height: 1.6;
    }

    .footer-copyright a {
        color: #dfe3f0;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-copyright a:hover {
        color: #6a82eb;
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 30px;
        }

        .footer-container {
            padding: 0 30px;
        }
    }

    @media (max-width: 480px) {
        .footer-grid {
            grid-template-columns: 1fr;
        }

        #footer {
            padding: 50px 0 30px;
        }

        .footer-container {
            padding: 0 20px;
        }
    }
</style>

