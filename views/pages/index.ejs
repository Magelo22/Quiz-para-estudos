<%- include ('../partials/header') %>

    <style>
        :root {
            --primary-color: #3c4a93;
            --secondary-color: #2c3d80;
            --accent-color: #4895ef;
            --dark-color: #2b2d42;
            --light-color: #f8f9fa;
            --success-color: #4cc9f0;
            --text-color: #495057;
            --text-light: #6c757d;
        }

        .home-body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background-color: var(--light-color);
            margin: 0;
            padding: 0;
            color: var(--text-color);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .home-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            width: 100%;
            flex: 1;
        }

        .hero-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            padding: 60px 0;
            gap: 40px;
        }

        .hero-content {
            flex: 1;
            max-width: 100%;
            width: 100%;
            text-align: center;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .hero-image img {
            max-width: 100%;
            height: auto;
            max-height: 400px;
            border-radius: 8px;
            object-fit: contain;
        }

        .welcome-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 20px;
            line-height: 1.2;
            color: var(--dark-color);
        }

        .highlight {
            color: var(--primary-color);
        }

        .site-description {
            font-size: 1.1rem;
            margin-bottom: 28px;
            color: var(--text-light);
            padding: 0 10px;
        }

        .stats-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .stat-item {
            text-align: center;
            min-width: 100px;
        }

        .stat-number {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 0.875rem;
            color: var(--text-light);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .cta-section {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
            border-radius: 12px;
            margin: 40px 0;
        }

        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 16px;
            color: var(--dark-color);
        }

        .section-subtitle {
            font-size: 1rem;
            color: var(--text-light);
            margin-bottom: 28px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .primary-button {
            background-color: var(--primary-color);
            color: white;
            border: none;
            padding: 14px 28px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 6px rgba(67, 97, 238, 0.2);
        }

        .primary-button:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 10px 15px rgba(67, 97, 238, 0.3);
        }

        .primary-button svg {
            transition: transform 0.3s ease;
        }

        .primary-button:hover svg {
            transform: translateX(4px);
        }

        .features-section {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
            margin-bottom: 60px;
        }

        .feature-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background-color: rgba(67, 97, 238, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            margin-left: auto;
            margin-right: auto;
        }

        .feature-icon svg {
            color: var(--primary-color);
            width: 20px;
            height: 20px;
        }

        .feature-card h3 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--dark-color);
            text-align: center;
        }

        .feature-card p {
            color: var(--text-light);
            text-align: center;
        }

        @media (min-width: 768px) {
            .hero-section {
                flex-direction: row;
                padding: 80px 0;
                text-align: left;
            }

            .hero-content {
                text-align: left;
                max-width: 600px;
            }

            .site-description {
                padding: 0;
            }

            .stats-container {
                justify-content: flex-start;
            }

            .welcome-title {
                font-size: 3rem;
            }

            .site-description {
                font-size: 1.25rem;
            }

            .features-section {
                grid-template-columns: repeat(2, 1fr);
                gap: 25px;
            }

            .feature-card {
                padding: 28px;
            }

            .feature-card h3,
            .feature-card p {
                text-align: left;
            }

            .feature-icon {
                margin-left: 0;
            }
        }

        @media (min-width: 992px) {
            .features-section {
                grid-template-columns: repeat(3, 1fr);
                gap: 30px;
            }

            .section-title {
                font-size: 2rem;
            }

            .section-subtitle {
                font-size: 1.125rem;
            }

            .primary-button {
                padding: 16px 32px;
                font-size: 1.125rem;
            }

            .cta-section {
                padding: 80px 20px;
            }
        }

        @media (min-width: 1200px) {
            .home-container {
                padding: 0;
            }
        }
    </style>

