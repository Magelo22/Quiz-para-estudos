<%- include ('../partials/header') %>

    <main>
        <h2>Atualizar dados do Professor</h2>

        <form action="/atualizar-professores/<%=professor.id%>" method="post">
            <div>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" value="<%=professor.nome%>">
            </div>
            <div>
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" value="<%=professor.email%>">
            </div>
            <div>
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" value="<%=professor.senha%>">
            </div>
            <div>
                <button type="submit"> Atualizar </button>
            </div>
        </form>
    </main>

<%- include ('../partials/footer') %>