<%- include ('../partials/header') %>

    <main>
        <h1>Cadastro do Aluno</h1>
        <h2>Insira os seus dados</h2>
    <form action="/inserir-alunos" method="post">
        <label for="nome" > Nome:</label>
        <input type="text" id="nome" name="nome" placeholder="Nome do Aluno">
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Email do Aluno">
        <br>
        <Label for="senha">Senha:</Label>
        <input type="password" name="senha" id="senha" placeholder="Senha do Aluno">
        <input type="submit" value="Cadastrar">
        <br><br>
        <p>Já tem uma conta, faça login abaixo:</p>
        <button type="button"><a href="/login-aluno">Login do Aluno</a></button>
        <br><br>
        <button type="button"><a href="/login">Voltar</a></button>
    </main>

