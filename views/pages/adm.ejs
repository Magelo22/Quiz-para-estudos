<%- include ('../partials/header') %>

    <main>

        <h1 >Olá, aqui é mostrado todos os Usuários</h1>
        <div>
            <h1>Lista de Usuários:</h1>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Papel</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (usuarios && usuarios.length> 0) { %>
                        <% usuarios.forEach(usuario=> { %>
                            <tr>
                                <td>
                                    <%= usuario.id %>
                                </td>
                                <td>
                                    <%= usuario.nome %>
                                </td>
                                <td>
                                    <%= usuario.email %>
                                </td>
                                <td>
                                    <%= usuario.papel %>
                                </td>
                                <td>
                                    <a  href="/usuarios/editar-usuarios/<%= usuario.id %>">Editar</a>
                                    <a  href="/usuarios/deletar-usuarios/<%= usuario.id %>">Deletar</a>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5">Nenhum usuário encontrado.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include ('../partials/footer') %>