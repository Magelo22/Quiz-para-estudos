<%- include('../partials/header') %>

    <style>
        :root {
            --primary: #3b4d9c;
            --primary-dark: #2a3a7a;
            --primary-light: #6a82eb;
            --primary-soft: #dfe3f0;
            --text-dark: #2d3748;
            --text-medium: #4a5568;
            --text-light: #718096;
            --white: #ffffff;
            --danger: #ff6b6b;
            --danger-dark: #e05353;
            --success: #48bb78;
            --radius-sm: 8px;
            --radius-md: 12px;
            --radius-lg: 16px;
            --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.12);
            --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .perfil-usuario-main {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8fafc;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: var(--text-medium);
            line-height: 1.6;
        }

        #perfil-usuario-page-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        #perfil-usuario-page-header {
            background: linear-gradient(135deg, var(--white) 0%, var(--primary-soft) 100%);
            color: var(--primary);
            padding: 4rem 1.5rem 2.5rem;
            text-align: center;
            position: relative;
            box-shadow: var(--shadow-md);
        }

        #perfil-usuario-page-avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            border: 5px solid var(--white);
            object-fit: cover;
            margin: 0 auto 1.5rem;
            box-shadow: var(--shadow-lg);
            aspect-ratio: 1/1;
            transition: var(--transition);
        }

        #perfil-usuario-page-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(59, 77, 156, 0.3);
        }

        .perfil-usuario-page-nome {
            font-size: clamp(1.5rem, 5vw, 2rem);
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--primary-dark);
            letter-spacing: -0.5px;
        }

        .perfil-usuario-page-email {
            font-size: clamp(1rem, 3vw, 1.1rem);
            color: var(--text-light);
            margin-bottom: 0.5rem;
            display: block;
        }

        .perfil-usuario-page-papel {
            display: inline-block;
            background-color: var(--primary);
            color: var(--white);
            padding: 0.4rem 1.2rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            box-shadow: var(--shadow-sm);
            margin-top: 0.5rem;
        }

        #perfil-usuario-page-content {
            flex: 1;
            padding: 2.5rem 1.5rem;
            max-width: 800px;
            margin: 0 auto;
            width: 100%;
            box-sizing: border-box;
        }

        .perfil-usuario-page-card {
            background: var(--white);
            border-radius: var(--radius-md);
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            border: 1px solid rgba(106, 130, 235, 0.1);
        }

        .perfil-usuario-page-card:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-2px);
        }

        .perfil-usuario-page-card-title {
            font-size: clamp(1.2rem, 4vw, 1.5rem);
            color: var(--primary);
            margin-bottom: 1.5rem;
            padding-bottom: 0.75rem;
            border-bottom: 2px solid var(--primary-soft);
            display: flex;
            align-items: center;
        }

        .perfil-usuario-page-card-title::before {
            content: '';
            display: inline-block;
            width: 8px;
            height: 24px;
            background: linear-gradient(to bottom, var(--primary), var(--primary-light));
            border-radius: 4px;
            margin-right: 12px;
        }

        .perfil-usuario-page-info-row {
            display: flex;
            flex-direction: column;
            margin-bottom: 1.5rem;
        }

        .perfil-usuario-page-info-label {
            font-weight: 600;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .perfil-usuario-page-info-label svg {
            margin-right: 8px;
            width: 18px;
            height: 18px;
            color: var(--primary-light);
        }

        .perfil-usuario-page-info-value {
            color: var(--text-medium);
            padding: 0.75rem;
            background-color: var(--primary-soft);
            border-radius: var(--radius-sm);
            transition: var(--transition);
        }

        .perfil-usuario-page-info-value:hover {
            background-color: rgba(106, 130, 235, 0.2);
        }

        #perfil-usuario-page-actions {
            display: flex;
            gap: 16px;
            width: 100%;
            max-width: 400px;
            margin: 3rem auto 0;
            justify-content: center;
        }

        .perfil-usuario-page-btn {
            background: linear-gradient(135deg, #3b4d9c 0%, #6a82eb 100%);
            color: #fff;
            padding: 16px 30px;
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(59, 77, 156, 0.3);
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            width: 100%;
            position: relative;
            overflow: hidden;
            z-index: 1;
            text-align: center;
            flex: 1;
            min-width: 150px;
        }

        .perfil-usuario-page-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #6a82eb 0%, #3b4d9c 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: -1;
        }

        .perfil-usuario-page-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(59, 77, 156, 0.4);
            color: #fff;
        }

        .perfil-usuario-page-btn:hover::before {
            opacity: 1;
        }

        .perfil-usuario-page-btn:active {
            transform: translateY(1px);
        }

        .perfil-usuario-page-btn-sair {
            background: linear-gradient(135deg, #e74c3c 0%, #ff6b6b 100%);
            box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        }

        .perfil-usuario-page-btn-sair::before {
            background: linear-gradient(135deg, #ff6b6b 0%, #e74c3c 100%);
        }

        .perfil-usuario-page-btn-sair:hover {
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
        }

        .perfil-usuario-page-a {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            width: 100%;
            height: 100%;
            color: inherit;
            text-decoration: none;
        }


        .perfil-usuario-page-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .perfil-usuario-page-btn-primary:hover {
            background-color: var(--primary-dark);
        }

        .perfil-usuario-page-btn-terciary:hover {
            background-color: var(--danger-dark);
        }

        .perfil-icon {
            width: 20px;
            height: 20px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .perfil-usuario-page-card {
            animation: fadeIn 0.5s ease-out forwards;
        }

        .perfil-usuario-page-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .perfil-usuario-page-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        @media (max-width: 992px) {
            #perfil-usuario-page-header {
                padding: 3.5rem 1.5rem 2rem;
            }
        }

        @media (max-width: 768px) {
            #perfil-usuario-page-header {
                padding: 3rem 1rem 1.8rem;
            }

            #perfil-usuario-page-avatar {
                width: 120px;
                height: 120px;
            }

            #perfil-usuario-page-content {
                padding: 2rem 1rem;
            }

            .perfil-usuario-page-card {
                padding: 1.5rem;
            }

            .perfil-usuario-page-papel {
                font-size: 0.85rem;
            }
        }

        @media (max-width: 600px) {
            #perfil-usuario-page-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .perfil-usuario-page-btn {
                max-width: 100%;
            }
        }

        @media (max-width: 480px) {
            #perfil-usuario-page-header {
                padding: 2.5rem 1rem 1.5rem;
            }

            #perfil-usuario-page-actions {
                flex-direction: column;
                max-width: 300px;
            }
        }

        #perfil-usuario-page-avatar {
            width: 100px;
            height: 100px;
            border-width: 4px;
        }

        .perfil-usuario-page-card {
            margin-bottom: 1.5rem;
        }
    </style>

    <main class="perfil-usuario-main">
        <div id="perfil-usuario-page-wrapper">
            <header id="perfil-usuario-page-header">
                <img id="perfil-usuario-page-avatar" src='/usuarios/avatar/<%=usuario.id%>'
                    alt='Avatar de <%= usuario.nome%>' onerror="this.src='/images/default-avatar.png'">
                <h1 class="perfil-usuario-page-nome">
                    <%=usuario.nome%>
                </h1>
                <p class="perfil-usuario-page-email">
                    <%=usuario.email%>
                </p>
                <span class="perfil-usuario-page-papel">
                    <%=usuario.papel%>
                </span>
            </header>

            <div id="perfil-usuario-page-content">
                <section class="perfil-usuario-page-card">
                    <h2 class="perfil-usuario-page-card-title">Informações Pessoais</h2>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                </path>
                            </svg>
                            Nome completo
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            <%=usuario.nome%>
                        </span>
                    </div>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                </path>
                            </svg>
                            Data de nascimento
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            <%=usuario.data_nasc%>
                        </span>
                    </div>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                                </path>
                            </svg>
                            Telefone
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            <%= usuario.telefone%>
                        </span>
                    </div>
                </section>

                <section class="perfil-usuario-page-card">
                    <h2 class="perfil-usuario-page-card-title">Progresso</h2>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Cursos completos
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            0
                        </span>
                    </div>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2">
                                </path>
                            </svg>
                            Lições concluídas
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            0
                        </span>
                    </div>

                    <div class="perfil-usuario-page-info-row">
                        <span class="perfil-usuario-page-info-label">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z">
                                </path>
                            </svg>
                            Pontuação total
                        </span>
                        <span class="perfil-usuario-page-info-value">
                            0
                        </span>
                    </div>
                </section>

                <div id="perfil-usuario-page-actions">
                    <button class="perfil-usuario-page-btn">
                        <a class="perfil-usuario-page-a" href="/usuarios/editar-usuario/<%=usuario.id%>">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                </path>
                            </svg>
                            Editar Perfil
                        </a>
                    </button>
                    <button class="perfil-usuario-page-btn perfil-usuario-page-btn-sair">
                        <a class="perfil-usuario-page-a" href="/usuarios/logout">
                            <svg class="perfil-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                </path>
                            </svg>
                            Sair
                        </a>
                    </button>
                </div>
            </div>
        </div>
    </main>

    <%- include ('../partials/footer') %>