<%- include ('../partials/header') %>

  <style>
    #atualizacao-page {
      margin: 0;
      padding: 20px;
      background-color: #3c4a93;
      font-family: Arial, sans-serif;
      min-height: 100vh;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      box-sizing: border-box;
    }

    .atualizacao-container {
      text-align: center;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      max-width: 450px;
      padding: 40px;
      box-sizing: border-box;
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .atualizacao-container h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 24px;
    }

    .atualizacao-input-group {
      margin-bottom: 25px;
      text-align: left;
      width: 100%;
    }

    .atualizacao-papel-btn {
      width: 100%;
      padding: 14px 20px;
      border: none;
      border-radius: 25px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      font-size: 15px;
      text-align: center;
      outline: none;
      appearance: none;
      background-color: white;
      color: #3c4a93;
      font-weight: bold;
      cursor: pointer;
      background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%233c4a93'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right 15px center;
      background-size: 15px;
      padding-right: 40px;
      height: auto;
    }

    .atualizacao-label {
      font-weight: bold;
      display: block;
      margin-bottom: 10px;
      font-size: 15px;
    }

    .atualizacao-input {
      width: 100%;
      padding: 14px 20px;
      border: none;
      border-radius: 25px;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      font-size: 15px;
      outline: none;
      box-sizing: border-box;
      transition: box-shadow 0.3s ease;
    }

    .atualizacao-input:focus {
      box-shadow: 0 0 8px #00d4ff;
    }

    .atualizacao-button-group {
      margin-top: 30px;
      text-align: center;
      width: 100%;
    }

    .atualizacao-btn {
      background-color: white;
      color: #3c4a93;
      font-weight: bold;
      padding: 14px 40px;
      border: none;
      border-radius: 25px;
      font-size: 16px;
      cursor: pointer;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      margin: 10px 0;
      transition: all 0.3s ease;
      min-width: 220px;
    }

    .atualizacao-btn:hover {
      background-color: #e6e6e6;
      transform: translateY(-2px);
      box-shadow: 2px 4px 8px rgba(0, 0, 0, 0.2);
    }

    @media (min-width: 1200px) {
      .atualizacao-container {
        max-width: 500px;
        padding: 40px;
      }

      .atualizacao-container h2 {
        font-size: 26px;
      }
    }

    @media (max-width: 768px) {
      .atualizacao-container {
        padding: 30px;
        max-width: 90%;
      }
    }

    @media (max-width: 480px) {
      .atualizacao-container {
        padding: 25px 20px;
        max-width: 95%;
      }

      .atualizacao-container h2 {
        font-size: 22px;
      }

      .atualizacao-btn {
        padding: 12px 30px;
        min-width: 200px;
        font-size: 15px;
      }
    }
  </style>

  <main id="atualizacao-page">
    <div class="atualizacao-container">
      <h2>Atualize os dados abaixo:</h2>
      <form id="atualizacao-form" action="/usuarios/atualizar-usuario/<%=usuario.id%>" method="post">
        <div class="atualizacao-input-group">
          <label for="nome" class="atualizacao-label">Digite seu novo nome:</label>
          <input type="text" id="atualizacao-nome" name="nome" class="atualizacao-input" value="<%= usuario.nome%>"
            required>
        </div>

        <div class="atualizacao-input-group">
          <label for="telefone" class="atualizacao-label">Digite seu n√∫mero</label>
          <input type="tel" id="atualizacao-tell" name="telefone" class="atualizacao-input"
            placeholder="(00) 00000-0000" value="<%= usuario.telefone%>" required>
        </div>

        <div class="atualizacao-input-group">
          <label for="data_nasc" class="atualizacao-label">Digite sua data de nascimento:</label>
          <input type="date" id="atualizacao-nascimento" name="data_nasc" class="atualizacao-input"
            value="<%= usuario.data_nasc%>" required>
        </div>

        <div class="atualizacao-input-group">
          <label for="atualizacao-papel" class="atualizacao-label">Escolha o seu papel:</label>
          <select class="atualizacao-papel-btn" id="atualizacao-papel" name="papel" required>
            <option value="aluno" <%=usuario.papel==='aluno' ? 'selected' : '' %>>Aluno</option>
            <option value="professor" <%=usuario.papel==='professor' ? 'selected' : '' %>>Professor</option>
          </select>
        </div>


        <div class="atualizacao-button-group">
          <button type="submit" class="atualizacao-btn">Atualizar</button>
        </div>
      </form>
    </div>
  </main>

  <%- include ('../partials/footer') %>