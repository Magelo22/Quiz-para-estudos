<%- include ('../partials/header') %>

    <style>
        #login-inicial-page {
            background-color: #3b4d9c;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
            color: white;
            text-align: center;
        }

        .login-inicial-titulo {
            font-size: 22px;
            margin-bottom: 30px;
            line-height: 1.4;
            max-width: 600px;
            padding: 0 20px;
        }

        .login-inicial-botao {
            background-color: white;
            color: #3b4d9c;
            padding: 12px 70px;
            margin: 10px;
            border: none;
            border-radius: 25px;
            box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
            font-size: 17px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            min-width: 220px;
        }

        .login-inicial-botao:hover {
            background-color: #dfe3f0;
            transform: translateY(-2px);
            box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.3);
        }

        /* Media Queries para responsividade */
        @media (max-width: 768px) {
            .login-inicial-titulo {
                font-size: 20px;
                margin-bottom: 25px;
            }

            .login-inicial-botao {
                padding: 12px 50px;
                font-size: 16px;
                min-width: 200px;
            }
        }

        @media (max-width: 480px) {
            .login-inicial-titulo {
                font-size: 18px;
                margin-bottom: 20px;
                padding: 0 15px;
            }

            .login-inicial-botao {
                padding: 10px 40px;
                font-size: 15px;
                min-width: 180px;
                margin: 8px;
            }
        }

        @media (max-width: 360px) {
            .login-inicial-titulo {
                font-size: 16px;
            }

            .login-inicial-botao {
                width: 100%;
                max-width: 250px;
            }
        }
    </style>

    <main id="login-inicial-page">
        <h1 class="login-inicial-titulo">Faça seu Cadastro gratuitamente<br>para ver conteúdos personalizados e
            interagir com a nossa comunidade!</h1>
        <h2><a href="/cadastro-usuarios">
                <button class="login-inicial-botao">Faça o seu cadastro</button>
            </a></h2>
    </main>

    <%- include ('../partials/footer') %>